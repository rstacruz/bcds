- rootClass = 'layout-event'

extends base.jade
include ../includes/social-list.jade

block head
  title= title
  link(rel='stylesheet', href='/assets/event.css')
  meta(content='website', property='og:type')
  meta(content=(title), property='og:title')
  meta(content=(title), name='description')
  meta(content=(description), property='og:description')
  meta(content=(description), name='description')
  each image in og_images
    meta(content=(image), property='og:image')
    meta(content=(image), name='twitter:image')
    meta(property='og:image:width', content='940')
    meta(property='og:image:height', content='492')

block body
  include ../includes/menu-block.jade
  .duo-layout
    .duo-ornament
    .duo-images
      block images

    .duo-aside
      +social-list({ url: '/tlc', title, description })
      .sidecontainer
        block prelude

    .duo-content
      a.watermark.brand-logo.-black(href='/home')
      .sidecontainer
        block content

    .duo-content.-full
      block intermission

    .duo-content
      .sidecontainer
        block after
